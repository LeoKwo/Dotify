<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:orientation="vertical"
    android:padding="@dimen/about_padding"
    >

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAboutCreator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about_creator"
        android:layout_marginBottom="@dimen/about_textview_margin"
        android:textColor="@color/black"
        android:textSize="@dimen/about_textview_size"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/about_textview_margin"
        android:textColor="@color/black"
        android:textSize="@dimen/about_textview_size"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvWebsite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about_website"
        android:layout_marginBottom="@dimen/about_textview_margin"
        android:textColor="@color/black"
        android:textSize="@dimen/about_textview_size"
        />


</androidx.appcompat.widget.LinearLayoutCompat>